{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/lint-check.sh",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/ts-lsp-validator/validate-typescript.ts",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
